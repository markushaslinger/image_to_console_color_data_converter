@page "/"
@using ImageForConsoleConverter.Pages.Components

<PageTitle>Index</PageTitle>

<MudPaper>
    <MudStack Row="false">
        <ImageUpload ImageUploaded="HandleImageUploaded"/>
        <MudSpacer/>
        @if (_csvRows is not null)
        {
            <MudStack>
                <MudText>16 Colors Array</MudText>
                <MudSlider Value="_width" Min="4" Max="82" Step="2" 
                           ValueChanged="(int newWidth) => HandleWidthChanged(newWidth)">@_width Columns</MudSlider>
                <MudSpacer />
                @foreach(var row in _csvRows)
                {
                    <MudText>@row</MudText>
                }
            </MudStack>
        }
    </MudStack>
</MudPaper>

@code {

    private IEnumerable<string>? _csvRows;

}